<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginStart="@dimen/dip_5"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/dip_50"
        android:layout_height="@dimen/dip_50">
        <ImageView
            android:id="@+id/profileImgViewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/iv_launcherIc"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/dip_20"
            android:layout_height="@dimen/dip_20"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_vertical"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/dip_10"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titleViewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#121329"
            android:lines="1"
            />
        <TextView
            android:id="@+id/contentViewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#121329"
            android:textSize="@dimen/sp_12"
            android:minLines="1"
            android:maxLines="2"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/postImgViewer"
        android:layout_width="@dimen/dip_50"
        android:layout_height="@dimen/dip_50"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/dip_20"
        android:layout_marginEnd="@dimen/dip_5"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>
