<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SuperTvDefault" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/kubrick_text_color_light</item>
        <item name="android:windowBackground">@color/bg_general</item>
        <item name="android:progressBarStyle">@style/SuperTvProgressBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="colorPrimary">@color/app_color_accent</item>
        <item name="colorPrimaryDark">@color/bg_general</item>
        <item name="colorAccent">@color/app_color_accent</item>

    </style>
    <style name="VideoDetailTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/netflix_red</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">4dp</item>
        <item name="tabPaddingEnd">4dp</item>
        <item name="tabTextColor">@color/translucent_white_18</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/netflix_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text.episode_title">
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text.episodeName">
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:layout_marginTop">@dimen/dip_8</item>
        <item name="android:textColor">@color/info_orange</item>
    </style>
</resources>